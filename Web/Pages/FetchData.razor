@page "/fetchdata"
@using Domain.Entities
@inject HttpClient Http

<PageTitle>Minimalism Manager</PageTitle>

<h1>Items</h1>

<p>Here are all of your items.</p>

@if (items == null)
{
    <p>
        <em>Loading...</em>
    </p>
}
else
{
    <table class="table">
        <thead>
        <tr>
            <th>Date</th>
            <th>Temp. (C)</th>
            <th>Temp. (F)</th>
            <th>Summary</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in items)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Quantity.ToString()</td>
                <td>@item.SubItems</td>
                <td>Test</td>
            </tr>
        }
        </tbody>
    </table>
}

